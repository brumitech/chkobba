{
    "compilerOptions": {
      "target": "ES2019",  
      "module": "CommonJS",  
      "lib": ["ES2019", "DOM"],  
      "outDir": "./dist",  
      "rootDir": "./src",  
      "strict": true,  
      "esModuleInterop": true,  
      "skipLibCheck": true,  
      "forceConsistentCasingInFileNames": true,  
      "resolveJsonModule": true,  
      "experimentalDecorators": true,  
      "emitDecoratorMetadata": true,  
      "declaration": true,  
      "moduleResolution": "node",  
      "isolatedModules": false  
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  