{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "outDir": "dist",
    "rootDir": "../../", // Ensure shared package is included
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/backend/src/*"],
      "@chkobba/shared": ["packages/shared/src"]
    }
  },
  "include": ["../../packages/shared/src", "src"],
  "exclude": ["node_modules", "dist"]
}
